{
  "name": "@pingpayio/onramp-sdk",
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "popup",
    "examples"
  ],
  "scripts": {
    "build:sdk": "tsup src/index.ts --format esm,cjs --dts --clean",
    "watch:sdk": "bun run build:sdk --watch",
    "dev:popup": "cd popup && bun run dev",
    "dev:examples": "cd examples && bun run dev",
    "dev": "concurrently \"bun run watch:sdk\" \"bun run dev:popup\" \"bun run dev:examples\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsup": "^8.0.2",
    "concurrently": "^8.2.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "post-me": "^0.4.5",
    "typed-channel": "^0.9.5",
    "zod": "^3.25.32"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ]
}
